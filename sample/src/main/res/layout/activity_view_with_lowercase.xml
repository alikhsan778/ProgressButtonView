<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/progressButtonView_with_lowercase_text" />

    <es.voghdev.progressbuttonview.ProgressButtonView
        android:id="@+id/progressButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/progressbuttonview_rounded_corners_purple"
        app:allCaps="false"
        app:backgroundDrawable="@drawable/progressbuttonview_rounded_corners_purple"
        app:hideButtonWhileLoading="false"
        app:text="@string/progressButtonView_lowerCase_text" />
</LinearLayout>
